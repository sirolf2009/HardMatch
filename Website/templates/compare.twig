<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="compare-table"></th>
            {% for item in nodes %}
                <th>{{ getNodeName(item) }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="compare-table">Categorie </td>
            {% for item in nodes %}
                <td>{{ getNodeCat(item) }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Info </td>
            {% for item in nodes %}
                <td>{{ getNodeDesc(item) }}</td>
            {% endfor %}
        </tr>
    </tbody>
</table>
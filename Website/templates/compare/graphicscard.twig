<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="compare-table"></th>
            {% for item in nodes %}
                <th>{{ getNodeProperty(item, 'Name') }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="compare-table">Prijs: </td>
            {% for item in nodes %}
                <td>{{ getNodePrice(item) }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Geheugen: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'Geheugengrootte') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Soort: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'CardInterface') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Snelheid Videochip: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'NominaleSnelheidVideochip') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Videochip Fabrikant: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'Videochipfabrikant') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">OpenGL Versie: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'OpenGLVersie') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">DirectX version: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'DirectXVersie') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Geheugen Snelheid: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'GeheugenSnelheid') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Artikelnummer: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'ModelID') }}</td>
            {% endfor %}
        </tr>
    </tbody>
</table>
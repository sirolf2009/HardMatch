<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="compare-table"></th>
            {% for item in nodes %}
                <th>{{ getNodeProperty(item, 'product') }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="compare-table">Opslagcapactiteit: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'Opslagcapactiteit') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Merk: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'brand') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <td class="compare-table">Artikelnummer: </td>
            {% for item in nodes %}
                <td>{{ getNodeProperty(item, 'ModelID') }}</td>
            {% endfor %}
        </tr>
    </tbody>
</table>
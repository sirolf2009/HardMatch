<table id="{{ table }}" class="table table-bordered">
    <thead>
        <tr>
            <th class="hidden">id</th>
            <th style="width: 1px">
                <button type="button" class="btn btn-default vergelijkButton">Vergelijk</button>
            </th>
            <th>Naam</th>
            <th>Beschrijving</th>
            <th>Gemiddelde Prijs</th>
            <th style="width: 75px">Acties</th>
        </tr>
    </thead>
    <tbody>

        {% for item in nodes %}
        <tr>
            <td class='hidden'>{{ getNodeID(item, 'n') }}</td>

            <td class='text-center'>
                <input type='checkbox' class='table-checkbox'>
            </td>
            <td>{{ getNodeName(item, 'n') }}</td>
            <td>{{ getNodeDesc(item, 'n') }}</td>
            <td>{{ getNodePrice(item, 'n') }}</td>
            <td>
                <button type='button' class='btn btn-warning'>
                    <span class='glyphicon glyphicon-list-alt'></span>
                </button>
                <button type='button' class='btn btn-success margin'>
                    <span class='glyphicon glyphicon-plus'></span>
                </button>
            </td>
        </tr>
        {% endfor %}

    </tbody>
</table>